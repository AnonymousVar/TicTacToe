<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/turn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/result" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="385dp"
            android:layout_height="364dp"
            app:layout_constraintBottom_toTopOf="@+id/again"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.576"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/turn"
            tools:context=".game.GameFragment">


            <Button
                android:id="@+id/box1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:insetLeft="5dp"
                android:insetTop="5dp"
                android:insetRight="5dp"
                android:insetBottom="5dp"
                android:textSize="60sp"
                app:backgroundTint="#00BCD4"
                app:layout_constraintBottom_toTopOf="@+id/box4"
                app:layout_constraintEnd_toStartOf="@+id/box2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/box2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:insetLeft="5dp"
                android:insetTop="5dp"
                android:insetRight="5dp"
                android:insetBottom="5dp"
                android:textSize="60sp"
                app:backgroundTint="#00BCD4"
                app:layout_constraintBottom_toTopOf="@+id/box5"
                app:layout_constraintEnd_toStartOf="@+id/box3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/box1"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/box3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:insetLeft="5dp"
                android:insetTop="5dp"
                android:insetRight="5dp"
                android:insetBottom="5dp"
                android:textSize="60sp"
                app:backgroundTint="#00BCD4"
                app:layout_constraintBottom_toTopOf="@+id/box6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/box2"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/box4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:insetLeft="5dp"
                android:insetTop="5dp"
                android:insetRight="5dp"
                android:insetBottom="5dp"
                android:textSize="60sp"
                app:backgroundTint="#00BCD4"
                app:layout_constraintBottom_toTopOf="@+id/box7"
                app:layout_constraintEnd_toStartOf="@+id/box5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/box1" />

            <Button
                android:id="@+id/box5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:insetLeft="5dp"
                android:insetTop="5dp"
                android:insetRight="5dp"
                android:insetBottom="5dp"
                android:textSize="60sp"
                app:backgroundTint="#00BCD4"
                app:layout_constraintBottom_toTopOf="@+id/box8"
                app:layout_constraintEnd_toStartOf="@+id/box6"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/box4"
                app:layout_constraintTop_toBottomOf="@+id/box2" />

            <Button
                android:id="@+id/box6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:insetLeft="5dp"
                android:insetTop="5dp"
                android:insetRight="5dp"
                android:insetBottom="5dp"
                android:textSize="60sp"
                app:backgroundTint="#00BCD4"
                app:layout_constraintBottom_toTopOf="@+id/box9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/box5"
                app:layout_constraintTop_toBottomOf="@+id/box3" />

            <Button
                android:id="@+id/box7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:insetLeft="5dp"
                android:insetTop="5dp"
                android:insetRight="5dp"
                android:insetBottom="5dp"
                android:textSize="60sp"
                app:backgroundTint="#00BCD4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/box8"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/box4" />

            <Button
                android:id="@+id/box8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:insetLeft="5dp"
                android:insetTop="5dp"
                android:insetRight="5dp"
                android:insetBottom="5dp"
                android:textSize="60sp"
                app:backgroundTint="#00BCD4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/box9"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/box7"
                app:layout_constraintTop_toBottomOf="@+id/box5" />

            <Button
                android:id="@+id/box9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:insetLeft="5dp"
                android:insetTop="5dp"
                android:insetRight="5dp"
                android:insetBottom="5dp"
                android:textSize="60sp"
                app:backgroundTint="#00BCD4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/box8"
                app:layout_constraintTop_toBottomOf="@+id/box6" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Try Again"
            android:visibility="invisible"
            app:backgroundTint="#009688"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

        <TextView
            android:id="@+id/result"
            android:layout_width="287dp"
            android:layout_height="63dp"
            android:text="Tic Tac Toe"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="48sp"
            app:layout_constraintBottom_toTopOf="@+id/turn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>